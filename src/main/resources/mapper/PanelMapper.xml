<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qinglong.todo.dao.PanelDao">
    <resultMap id="BaseResultMap" type="com.qinglong.todo.entity.Panel">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <parameterMap id="Panel" type="com.qinglong.todo.entity.Panel"/>

    <sql id="Base_Column_List">
        id, name,create_time,update_time
    </sql>

    <select id="find" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from panel
        where id= '1'
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from Panel
    </select>
    <select id="findById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from Panel
        where id=#{id}

    </select>

    <insert id="add" parameterType="com.qinglong.todo.entity.Panel">
        insert
        into Panel
       values (#{id},#{name},#{createTime},#{updateTime})
    </insert>

    <update id="update" parameterType="com.qinglong.todo.entity.Panel">
       update Panel
       set
       id=#{id},name=#{name},create_time=#{createTime},update_time=#{updateTime}
    </update>

    <delete id="delete" parameterType="java.lang.Integer">
        delete
        from Panel
        where id=#{id}
    </delete>
</mapper>
